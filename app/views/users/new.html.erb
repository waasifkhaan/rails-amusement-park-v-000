<%= form_for(@user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :height %>
<%= f.text_field :height %>
<%= f.label :happiness %>
<%= f.number_field :happiness %>
<%= f.label :nausea %>
<%= f.number_field :nausea %>
<%= f.label :tickets %>
<%= f.number_field :tickets %>
<%= f.label :user_admin %>
<%= fields_for :admin do |user| %>
  Check box if you are a theme park owner<%= user.check_box :admin , id:user_admin %>
<% end %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit %>
<% end %>
